@model List<Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="container my-4">
    <!-- Add Product Button -->
    <a asp-action="AddProduct" class="btn btn-success mb-3">Add Product</a>

    <!-- Filter Form -->
    <form method="post" class="mb-4">
        <div class="form-group">
            <select name="order" class="form-control d-inline-block w-auto">
                <option value="">Select Order</option>
                <option value="low-to-high">Low To High</option>
                <option value="high-to-low">High To Low</option>
                <option value="all">All</option>
            </select>
            <input type="submit" class="btn btn-info ml-2" value="Filter" />
        </div>
    </form>

    <!-- Product Listing -->
    <section style="background-color: #eee;">
        <div class="container py-5">
            @foreach (var product in Model)
            {
                <div class="row justify-content-center mb-3">
                    <div class="col-md-12 col-xl-10">
                        <div class="card shadow-0 border rounded-3">
                            <div class="card-body">
                                <div class="row">
                                    <!-- Product Image -->
                                    <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                        <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                            <img src="@product.Image" alt="@product.Name" class="w-100" height="150" />
                                            <a href="#!">
                                                <div class="hover-overlay">
                                                    <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <!-- Product Details -->
                                    <div class="col-md-6 col-lg-6 col-xl-6">
                                        <h5>@product.Name</h5>
                                        <div class="d-flex flex-row">
                                            <div class="text-danger mb-1 me-2">
                                                @for (int i = 0; i < 4; i++)
                                                {
                                                    <i class="fa fa-star"></i>
                                                }
                                            </div>
                                            <span>310</span>
                                        </div>
                                        <div class="mt-1 mb-0 text-muted small">
                                            <span>100% cotton</span>
                                            <span class="text-primary"> • </span>
                                            <span>Light weight</span>
                                            <span class="text-primary"> • </span>
                                            <span>Best finish<br /></span>
                                        </div>
                                        <div class="mb-2 text-muted small">
                                            <span>Unique design</span>
                                            <span class="text-primary"> • </span>
                                            <span>For men</span>
                                            <span class="text-primary"> • </span>
                                            <span>Casual<br /></span>
                                        </div>
                                        <p class="text-truncate mb-4 mb-md-0">
                                            @product.Description
                                        </p>
                                    </div>
                                    <!-- Product Pricing and Actions -->
                                    <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                        <div class="d-flex flex-row align-items-center mb-1">
                                            <h4 class="mb-1 me-1">&#8377; @product.Price</h4>
                                            <span class="text-danger"><s>1000</s></span>
                                        </div>
                                        <h6 class="text-success">Free shipping</h6>
                                        <div class="d-flex flex-column mt-4">
                                            <button type="button" class="btn btn-primary btn-sm">Details</button>
                                            <a asp-controller="Product" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm mt-2">
                                                Add to Cart
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
